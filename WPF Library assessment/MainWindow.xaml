<Window x:Class="WPF_Library_assessment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Library_assessment"
          xmlns:UserControl="clr-namespace:WPF_Library_assessment.User_Control_Stuff"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid Style="{StaticResource GridStyle}">

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>



        </Grid.RowDefinitions>
        <UserControl:headerUC/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Style="{StaticResource mainbutton}" Name="signInBtn"  Content="Sign In" Click="signInBtn_Click" VerticalAlignment="Bottom" Margin="0,0,0,20" />
            <Button Style="{StaticResource mainbutton}" Name="signUpBtn" Grid.Row="1"  Content="Sign Up" Click="signUpBtn_Click" VerticalAlignment="Top" Margin="0,20,0,0" />

        </Grid>

        </Grid>
      
      
   

</Window>
