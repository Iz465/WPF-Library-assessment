<Window x:Class="WPF_Library_assessment.Window_stuff.UsersBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="order page " Height="600" Width="500">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#9CAF88">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button x:Name="orderCloseBtn" VerticalAlignment="Center" Content="X" Width="50" Height="55" FontSize="40" HorizontalAlignment="Right" Margin="0,0,20,0" Click="orderCloseBtn_Click" Background="Transparent" BorderThickness="0"/>
            <TextBlock Style="{StaticResource ResourceKey=textStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="Ordered Books"/>
        <Grid Grid.Row="1" x:Name="InfoGrid" >
        </Grid>
    </Grid>
    </ScrollViewer>
</Window>