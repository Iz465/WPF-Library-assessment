<Page Style="{StaticResource NorwesterFont}" x:Class="WPF_Library_assessment.Library_Pages.MemberPG"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Library_assessment.Library_Pages"
      xmlns:UserControl="clr-namespace:WPF_Library_assessment.User_Control_Stuff"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MemberPG">

    <Grid Style="{StaticResource GridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <UserControl:headerUC/>
        <TextBlock Grid.Row="1" Text="Member Info" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Book" HorizontalAlignment="Center" FontSize="30" Padding="5"/>
            <TextBlock Grid.Column="1" Text="Book" HorizontalAlignment="Center" FontSize="30" Padding="5"/>
            <TextBlock Grid.Column="2" Text="Book" HorizontalAlignment="Center" FontSize="30" Padding="5"/>
            <TextBlock Grid.Column="3" Text="Book" HorizontalAlignment="Center" FontSize="30" Padding="5"/>
            <TextBlock Grid.Column="4" Text="Book" HorizontalAlignment="Center" FontSize="30" Padding="5"/>
            <TextBlock Grid.Column="5" Text="Book" HorizontalAlignment="Center" FontSize="30" Padding="5"/>
            <TextBlock Grid.Column="6" Text="Book" HorizontalAlignment="Center" FontSize="30" Padding="5"/>
            <TextBlock Grid.Column="7" Text="Book" HorizontalAlignment="Center" FontSize="30" Padding="5"/>
            <TextBlock Grid.Column="8" Text="Book" HorizontalAlignment="Center" FontSize="30" Padding="5"/>
            <TextBlock Grid.Column="9" Text="Book" HorizontalAlignment="Center" FontSize="30" Padding="5"/>
        </Grid>
    </Grid>
    
</Page>
