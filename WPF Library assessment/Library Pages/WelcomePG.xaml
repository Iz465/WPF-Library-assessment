<Page x:Class="WPF_Library_assessment.Library_Pages.WelcomePG"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Library_assessment.Library_Pages"
        xmlns:UserControl="clr-namespace:WPF_Library_assessment.User_Control_Stuff"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePG">
    <Page.Resources>
        <Style TargetType="Grid" x:Key="GridStyle">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#154734" Offset="0"/>
                        <GradientStop Color="DarkSeaGreen" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Style="{StaticResource GridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <UserControl:headerUC/>
        <TextBlock Grid.Row="1" Text="Welcome to the library" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40"/>
        <Grid Grid.Row="2" x:Name="Grid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Drama" Margin="10" HorizontalAlignment="Center" />
            <Image x:Name="dramaImage" MouseLeftButtonDown="dramaImage_MouseLeftButtonDown" Source="Fantasy.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100"/>
            <TextBlock Grid.Column="1" Margin="10" Text="Fantasy" HorizontalAlignment="Center"/>
            <Image x:Name="fantasyImage" MouseLeftButtonDown="fantasyImage_MouseLeftButtonDown" Grid.Column="1" Source="Fantasy.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100"/>
            <TextBlock Grid.Row="1" Margin="10" Text="Horror"  HorizontalAlignment="Center"/>
            <Image x:Name="horrorImage" MouseLeftButtonDown="horrorImage_MouseLeftButtonDown" Grid.Row="1" Source="Horror.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Margin="10" Text="Mystery"  HorizontalAlignment="Center"/>
            <Image x:Name="mysteryImage" MouseLeftButtonDown="mysteryImage_MouseLeftButtonDown" Grid.Row="1" Grid.Column="1" Source="Mystery.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100"/>

        </Grid>
       
    </Grid>
</Page>
