<UserControl x:Class="WPF_Library_assessment.User_Control_Stuff.bookCardUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Library_assessment.User_Control_Stuff"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400" Background="DarkGray">
    <Grid Margin="10">
        <Border BorderBrush="Black" BorderThickness="5">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="Black" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>
                <Image Source="{Binding ImageSource}" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform"/>
                <TextBlock Grid.Row="1" Text="{Binding Name}" HorizontalAlignment="center" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Text="{Binding Author}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" Text="{Binding Pages}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="4" Text="{Binding Available}" HorizontalAlignment="Center" VerticalAlignment="Center"/>



            </Grid>
        </Border>
    </Grid>
</UserControl>
